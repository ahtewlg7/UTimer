<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_gtdinfo_layout_title"
        android:layout_width="match_parent"
        app:layout_heightPercent="30%"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_gtdinfo_layout_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_gtdinfo_layout_detail"
        android:layout_below="@+id/activity_gtdinfo_layout_title"
        android:layout_width="match_parent"
        android:background="@android:color/holo_green_dark"
        app:layout_heightPercent="70%"
        android:orientation="vertical" >
        <com.utimer.view.NoteBaseSectionRecyclerView
            android:id="@+id/activity_gtdinfo_layout_recylerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:scrollbars="none"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
